{
  "name": "uiw-project",
  "description": "A high quality UI Toolkit, A Component Library for React 16+.",
  "homepage": "https://uiwjs.github.io",
  "private": true,
  "scripts": {
    "remove": "lerna exec --scope @uiw/* -- rm -rf package-lock.json",
    "lib": "lerna exec --scope @uiw/react-file-input -- tsbb build --target react",
    "lib:css": "lerna exec --scope @uiw/react-file-input -- compile-less -d src -o esm",
    "lib:css:dist": "lerna exec --scope @uiw/react-file-input -- compile-less -d src -o lib --combine=dist.css",
    "lib:css:watch": "lerna exec --scope @uiw/react-file-input -- compile-less -d src -o esm --watch",
    "lib:watch": "lerna exec --scope @uiw/react-file-input -- tsbb watch & npm run lib:css:watch",
    "lib:bootstrap": "lerna bootstrap --hoist --scope @uiw/react-file-input",
    "lib:build": "npm run lib && npm run lib:css && npm run lib:css:dist",
    "//>>>>>>>>>>>>": "<<<<<<<<<<",
    "watch:other:lib": "lerna exec --parallel --scope @uiw/* --ignore @uiw/doc -- tsbb watch",
    "watch:uiw": "lerna exec --scope uiw -- tsbb watch",
    "//-----------": "//-----------",
    "build": "npm run b:uiw && npm run b:css && npm run b:css:dist",
    "start": "lerna exec --scope @example/uiw -- npm run start",
    "doc": "npm run b:website && npm run b:doc",
    "b:website": "lerna exec --scope @example/uiw -- npm run build",
    "b:doc": "lerna exec --scope @uiw/doc -- node script/released.js",
    "b:uiw": "lerna exec --scope @uiw/* --scope uiw --ignore @uiw/doc -- tsbb build",
    "b:css": "lerna exec --scope @uiw/* -- compile-less -d src -o esm",
    "b:css:dist": "lerna exec --scope @uiw/* --scope @uiw/utils -- compile-less -d src -o lib --combine=dist.css",
    "b:bundle": "lerna exec --scope uiw -- kkt build --bundle",
    "b:bundle:min": "lerna exec --scope uiw -- kkt build --bundle --mini",
    "bundle": "npm run b:bundle && npm run b:bundle:min",
    "bootstrap": "lerna bootstrap",
    "hoist": "lerna bootstrap --hoist",
    "bootstrap:webiste": "lerna bootstrap --scope @example/uiw",
    "test": "tsbb test --env=jsdom",
    "coverage": "tsbb test --coverage",
    "u:version": "lerna version --no-changelog --no-push --no-git-tag-version --yes && npm run b:doc",
    "u:publish": "lerna publish from-package --yes --no-verify-access",
    "clean": "lerna clean",
    "compile-less": "compile-less",
    "prettier": "prettier --write '**/*.{js,jsx,tsx,ts,less,md,json}'",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx"
  },
  "jest": {
    "testMatch": [
      "<rootDir>/packages/**/src/**/__test__/*.{js,jsx,ts,tsx}"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,less,md,json}": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write"
    ]
  },
  "devDependencies": {
    "@kkt/less-modules": "6.11.0",
    "@kkt/react-library": "6.11.0",
    "@types/jest": "27.0.1",
    "@types/react": "17.0.20",
    "@types/react-dom": "17.0.9",
    "@types/react-test-renderer": "17.0.1",
    "compile-less-cli": "1.8.8",
    "husky": "7.0.2",
    "jest-environment-jsdom": "27.1.0",
    "kkt": "6.11.0",
    "lerna": "4.0.0",
    "lint-staged": "11.1.2",
    "prettier": "2.3.2",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-test-renderer": "17.0.2",
    "tsbb": "3.1.5"
  }
}
